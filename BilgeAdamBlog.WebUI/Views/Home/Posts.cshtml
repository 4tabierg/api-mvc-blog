@model List<PostViewModel>
@{
    ViewData["Title"] = "Posts";
}

<div class="col-lg-8 mgr-50">
    <div class="blog-section mb-20">
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="trending" role="tabpanel" aria-labelledby="trending-tab">
                <div class="blog-items">
                    <div class="row">
                        @foreach (PostViewModel item in Model)
                        {
                            <div class="col-lg-6 col-md-6 col-sm-6 col-12">
                                <div class="blog-item">
                                    <div class="blog-img">
                                        <img src="@item.ImagePath" />
                                    </div>
                                    <div class="blog-info">
                                        <h3 class="post-title">
                                            <a asp-controller="Home" asp-action="Post" asp-route-id="@item.Id" title="">@item.Title</a>
                                        </h3>
                                        <ul class="meta">
                                            <li>@item.CreatedDate</li>
                                            <li><i class="la la-eye"></i>@item.ViewCount</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="heeney-pagination text-center">
        <nav aria-label="Page navigation example">
            <ul class="pagination justify-content-center">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1"><i class="fas fa-arrow-left"></i></a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#"><i class="fas fa-arrow-right"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</div>


